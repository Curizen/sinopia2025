<section id="hero" class="w-full bg-white flex flex-col justify-center items-center relative h-full md:py-10">
  <div class="w-full max-w-7xl mx-auto md:px-4 lg:px-8 flex flex-col-reverse lg:flex-row items-center justify-between gap-6 md:gap-12">

    <div class="flex-1 text-center lg:text-left space-y-6">
      <h1 class="text-3xl lg:text-4xl font-extrabold text-orange-600 leading-tight">
        <%= __('hero.title') %>
      </h1>
      <p class="text-gray-700 text-base lg:text-lg leading-relaxed">
        <%= __('hero.description') %>
      </p>
      <div class="flex flex-col sm:flex-row items-center gap-4 mt-6 justify-center lg:justify-start">
        <a href="/account/signup" 
          class="w-2/3 md:w-1/3 lg:w-full text-center px-6 py-3 bg-orange-600 text-white rounded-xl font-semibold shadow-lg hover:bg-orange-700 transition-all duration-300">
          <%= __('hero.joinNow') %>
        </a>
        <a href="#services" 
          class="w-2/3 md:w-1/3 lg:w-full text-center px-6 py-3 border-2 border-orange-600 text-orange-600 rounded-xl font-semibold hover:bg-orange-50 transition-all duration-300">
          <%= __('hero.exploreServices') %>
        </a>
      </div>
    </div>

    <div class="flex-1 flex justify-center lg:justify-end">
      <img src="https://i.pinimg.com/1200x/b1/78/0d/b1780d8374a759d5f414e3343981998b.jpg" 
        alt="Connecting Skills" 
        class="w-full md:max-w-md h-full max-h-[400px] lg:max-w-lg md:rounded-xl shadow-xl">
    </div>

  </div>

  <div class="w-full bg-white py-16">
    <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-2 xl:grid-cols-4 gap-8 text-center">

        <div class="flex flex-col items-center space-y-3">
          <div class="p-4 bg-orange-50 rounded-full shadow-md">
            <i class="fas fa-user-tie text-orange-600 text-3xl"></i>
          </div>
          <h2 class="text-3xl font-bold text-gray-800">50K+</h2>
          <p class="text-gray-600 font-medium"><%= __('hero.stats.activeTalents') %></p>
        </div>

        <div class="flex flex-col items-center space-y-3">
          <div class="p-4 bg-orange-50 rounded-full shadow-md">
            <i class="fas fa-briefcase text-orange-600 text-3xl"></i>
          </div>
          <h2 class="text-3xl font-bold text-gray-800">25K+</h2>
          <p class="text-gray-600 font-medium"><%= __('hero.stats.projectsCompleted') %></p>
        </div>

        <div class="flex flex-col items-center space-y-3">
          <div class="p-4 bg-orange-50 rounded-full shadow-md">
            <i class="fas fa-star text-orange-600 text-3xl"></i>
          </div>
          <h2 class="text-3xl font-bold text-gray-800">4.9</h2>
          <p class="text-gray-600 font-medium"><%= __('hero.stats.averageRating') %></p>
        </div>

        <div class="flex flex-col items-center space-y-3">
          <div class="p-4 bg-orange-50 rounded-full shadow-md">
            <i class="fas fa-check-circle text-orange-600 text-3xl"></i>
          </div>
          <h2 class="text-3xl font-bold text-gray-800">98%</h2>
          <p class="text-gray-600 font-medium"><%= __('hero.stats.successRate') %></p>
        </div>

      </div>
    </div>
  </div>
</section>

