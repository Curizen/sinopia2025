<div class="max-w-6xl mx-auto my-10 p-6 bg-white rounded-3xl shadow-2xl">
  <h1 class="text-3xl font-bold text-orange-600 mb-10 text-center">
    <i class="fas fa-search mr-2"></i> Project Skill Search
  </h1>

  <form action="/client/project-search" method="post" class="mb-10 space-y-4">
    <textarea name="projectDescription" rows="4" placeholder="Describe your project..." 
      class="w-full border rounded p-3 text-sm focus:ring-2 focus:ring-orange-400"><%= projectDescription || '' %></textarea>
    <button type="submit" class="px-6 py-2 bg-orange-500 text-white rounded-md hover:bg-orange-600">
      Analyze Project
    </button>
  </form>

  <% if(projectData){ %>
    <h2 class="text-2xl font-semibold text-gray-700 mb-6">Project: <%= projectData.title %></h2>

    <div class="grid md:grid-cols-2 gap-6 mb-8">
      <% projectData.cases.forEach(c => { %>
        <div class="p-6 bg-gradient-to-br from-orange-50 to-white rounded-2xl shadow hover:shadow-lg transition border border-gray-100">
          <h3 class="text-lg font-semibold text-gray-800 mb-2"><i class="fas fa-folder-open mr-2 text-orange-500"></i> <%= c.title %></h3>
          <p class="text-gray-600 text-sm mb-4"><%= c.description %></p>

          <h4 class="font-medium text-gray-700 mb-2">Required Skills:</h4>
          <ul class="space-y-2">
            <% c.skills.forEach(skill => { %>
              <li class="flex justify-between items-center bg-gray-100 p-2 rounded">
                <span class="text-gray-700"><%= skill %></span>
                <form action="/client/find-skill" method="post">
                  <input type="hidden" name="skill" value="<%= skill %>">
                  <button type="submit" class="px-3 py-1 bg-blue-500 text-white rounded-md hover:bg-blue-600 text-xs">
                    Find Skill
                  </button>
                </form>
              </li>
            <% }) %>
          </ul>
        </div>
      <% }) %>
    </div>
  <% } %>
</div>
