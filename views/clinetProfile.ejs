<div class="max-w-6xl mx-auto p-6 py-12 my-16 bg-white rounded-3xl shadow-2xl space-y-10">

  <!-- Success Toast -->
  <% if (successMessage) { %>
  <div id="success-toast"
       class="fixed top-5 left-1/2 transform -translate-x-1/2 bg-orange-500 text-white px-6 py-3 rounded shadow-lg opacity-0 transition-opacity duration-500 z-50">
    <%= successMessage %>
  </div>
  <% } %>

  <!-- Company Header -->
  <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-6 border-b pb-6">
    <div>
      <h1 class="text-4xl font-bold text-orange-600 mb-2"><%= company.company_name %></h1>
      <p class="text-gray-600 text-lg"><i class="fas fa-industry mr-2"></i><%= company.industry %></p>
      <p class="text-gray-500 text-sm mt-1"><i class="fas fa-map-marker-alt mr-2"></i><%= company.headquarters %></p>
      <p class="text-gray-500 text-sm mt-1"><i class="fas fa-users mr-2"></i><%= company.size_label %></p>
      <p class="text-gray-500 text-sm mt-1"><i class="fas fa-calendar-alt mr-2"></i>Founded: <%= company.established_at %></p>
      <p class="text-gray-500 text-sm mt-1"><i class="fas fa-user-tie mr-2"></i>Founder: <%= company.founder %></p>
    </div>

    <div class="flex flex-col gap-3">
      <a href="<%= company.website %>" target="_blank"
         class="px-5 py-2 bg-orange-600 text-white rounded-xl shadow hover:bg-orange-700 transition">
        <i class="fas fa-globe mr-2"></i>Website
      </a>
      <a href="<%= company.linkedin %>" target="_blank"
         class="px-5 py-2 border border-orange-600 text-orange-600 rounded-xl shadow hover:bg-orange-50 transition">
        <i class="fab fa-linkedin mr-2"></i>LinkedIn
      </a>
    </div>
  </div>

  <!-- About Company -->
  <div class="border rounded-lg p-6 bg-gray-50 shadow hover:shadow-lg transition relative">
    <h2 class="text-2xl font-semibold text-gray-700 flex items-center gap-2 mb-3">
      <i class="fas fa-info-circle text-orange-600"></i> About the Company
    </h2>
    <p class="text-gray-600 text-sm md:text-base leading-relaxed"><%= company.description %></p>
    <div class="absolute top-4 right-4">
      <button class="text-gray-500 hover:text-orange-500 transition"><i class="fas fa-edit"></i></button>
    </div>
  </div>

  <!-- Key Facts -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    <div class="bg-orange-50 p-6 rounded-2xl text-center shadow">
      <h3 class="text-3xl font-bold text-orange-600"><%= company.completed_projects %>+</h3>
      <p class="text-gray-600">Completed Projects</p>
    </div>
    <div class="bg-orange-50 p-6 rounded-2xl text-center shadow">
      <h3 class="text-3xl font-bold text-orange-600"><%= company.number_of_employees %></h3>
      <p class="text-gray-600">Employees</p>
    </div>
    <div class="bg-orange-50 p-6 rounded-2xl text-center shadow">
      <h3 class="text-3xl font-bold text-orange-600"><%= company.certifications.length %></h3>
      <p class="text-gray-600">Certifications</p>
    </div>
  </div>

  <!-- Specialties -->
  <div class="border rounded-lg p-6 bg-gray-50 shadow hover:shadow-lg transition">
    <div class="flex justify-between items-center mb-4">
      <h2 class="text-2xl font-semibold text-gray-700 flex items-center gap-2">
        <i class="fas fa-hammer text-orange-600"></i> Specialties
      </h2>
      <button class="text-gray-500 hover:text-orange-500 flex items-center gap-2 transition">
        <i class="fas fa-plus-circle"></i> Edit
      </button>
    </div>
    <div class="flex flex-wrap gap-3">
      <% company.specialties.forEach(s => { %>
      <span class="bg-orange-100 text-orange-700 px-4 py-2 rounded-xl font-medium shadow-sm"><%= s %></span>
      <% }) %>
    </div>
  </div>

  <div class="border rounded-lg p-6 bg-gray-50 shadow hover:shadow-lg transition">
    <h2 class="text-2xl font-semibold text-gray-700 flex items-center gap-2 mb-3">
      <i class="fas fa-certificate text-orange-600"></i> Certifications
    </h2>
    <ul class="list-disc list-inside text-gray-700 space-y-1">
      <% company.certifications.forEach(c => { %>
        <li><%= c %></li>
      <% }) %>
    </ul>
  </div>

  <div class="border rounded-lg p-6 bg-gray-50 shadow hover:shadow-lg transition">
    <h2 class="text-2xl font-semibold text-gray-700 flex items-center gap-2 mb-4">
      <i class="fas fa-building text-orange-600"></i> Recent Projects
    </h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
      <% company.recent_projects.forEach(p => { %>
        <div class="bg-white p-5 rounded-xl shadow hover:shadow-md transition text-center">
          <h3 class="text-lg font-bold text-gray-800"><%= p.name %></h3>
          <p class="text-gray-500"><i class="fas fa-map-marker-alt mr-1"></i><%= p.location %></p>
          <p class="text-gray-400 text-sm"><%= p.year %></p>
        </div>
      <% }) %>
    </div>
  </div>

  <div class="border rounded-lg p-6 bg-orange-50 shadow text-center">
    <h2 class="text-2xl font-semibold text-gray-800 mb-4">
      <i class="fas fa-envelope text-orange-600 mr-2"></i> Contact
    </h2>
    <p class="text-gray-700 mb-2"><i class="fas fa-envelope mr-2"></i><%= company.contact_email %></p>
    <p class="text-gray-700"><i class="fas fa-phone mr-2"></i><%= company.contact_phone %></p>
  </div>

</div>
