<div class="max-w-6xl mx-auto p-6 py-12 my-16 bg-white rounded-3xl shadow-2xl space-y-10">

  <% if (successMessage) { %>
  <div id="success-toast" class="fixed top-5 left-1/2 transform -translate-x-1/2 bg-orange-500 text-white px-6 py-3 rounded shadow-lg opacity-0 transition-opacity duration-500 z-50">
    <%= successMessage %>
  </div>
  <% } %>

  <% if(user.personal_info){ %>
  <div class="flex flex-col md:flex-row items-center md:items-start gap-6">
    <div class="flex-1 text-center md:text-left">
      <h1 class="text-4xl font-bold text-orange-600"><%= user.personal_info.name %></h1>
      <div class="flex gap-4 items-center">
        <% if (user.personal_info.title) { %>
          <p class="text-gray-600 mt-1 text-lg"><%= user.personal_info.title %></p>
        <% } %>

        <% if (user.personal_info.location) { %>
          <p class="text-gray-500 mt-2 text-sm">
            <i class="fas fa-map-marker-alt mr-1"></i>
            <%= user.personal_info.location %>
          </p>
        <% } %>

        <% if (user.personal_info.phone) { %>
          <p class="text-gray-500 mt-1 text-sm">
            <i class="fas fa-phone mr-1"></i>
            <%= user.personal_info.phone %>
          </p>
        <% } %>
      </div>
      <div class="mt-4 flex flex-wrap justify-center md:justify-start gap-3">
        <a href="mailto:<%= user.personal_info.email %>" class="flex items-center gap-2 px-4 py-2 bg-orange-600 text-white rounded-xl shadow hover:bg-orange-700 transition">
          <i class="fas fa-envelope"></i> <%= __('myProfile.email') %>
        </a>
        <% if(user.personal_info.linkedin){ %>
        <a href="<%= user.personal_info.linkedin %>" target="_blank" class="flex items-center gap-2 px-4 py-2 border border-orange-600 text-orange-600 rounded-xl shadow hover:bg-orange-50 transition">
          <i class="fab fa-linkedin"></i> <%= __('myProfile.linkedin') %>
        </a>
        <% } %>
        <% if(user.personal_info.github){ %>
        <a href="<%= user.personal_info.github %>" target="_blank" class="flex items-center gap-2 px-4 py-2 border border-gray-600 text-gray-600 rounded-xl shadow hover:bg-gray-50 transition">
          <i class="fab fa-github"></i> <%= __('myProfile.github') %>
        </a>
        <% } %>
      </div>
    </div>
    <div class="mt-4 md:mt-0 flex flex-col gap-2">
      <button class="text-lg font-semibold text-gray-500 flex items-center gap-2 mb-3">
        <i class="fas fa-edit"></i> <%= __('myProfile.editInfo') %>
      </button>
    </div>
  </div>
  <% } %>

  <div class="mx-auto p-6 bg-white border shadow-lg rounded-xl w-full">
    <form id="cvForm" enctype="multipart/form-data" class="flex flex-col md:flex-row items-center gap-4 w-full">
      <label for="cv" id="cv-label" class="flex-1 w-full cursor-pointer bg-gray-50 hover:bg-gray-100 border border-gray-300 rounded-lg px-4 py-3 flex items-center justify-between transition">
        <span id="cv-label-text" class="text-gray-700 font-medium"><%= __('myProfile.chooseCV') %></span>
        <i id="cv-label-icon" class="fas fa-upload text-orange-600 ml-2"></i>
      </label>
      <input type="file" name="cv" id="cv" accept=".pdf,.doc,.docx" class="hidden"/>
      <button type="submit" id="upload-btn" class="bg-orange-600 hover:bg-orange-700 text-white font-semibold py-3 px-6 rounded-lg shadow transition w-full md:w-auto flex items-center justify-center gap-2">
        <i class="fas fa-file-upload"></i> <%= __('myProfile.uploadCV') %>
      </button>
    </form>
    <div id="upload-status" class="text-sm text-orange-600 mt-2 ml-4 font-semibold"></div>
  </div>

  <% if(user.about){ %>
  <div class="border rounded-lg p-6 bg-gray-50 shadow hover:shadow-lg transition relative">
    <h2 class="text-2xl font-semibold text-gray-700 flex items-center gap-2 mb-3">
      <i class="fas fa-user-circle"></i> <%= __('myProfile.about') %>
    </h2>
    <p class="text-gray-600 text-sm md:text-base"><%= user.about %></p>
    <div class="absolute top-4 right-4 flex gap-2">
      <button class="text-gray-500 hover:text-orange-500 transition"><i class="fas fa-edit"></i></button>
    </div>
  </div>
  <% } %>

  <% if(user.languages && user.languages.length){ %>
  <div class="border rounded-lg p-6 bg-gray-50 shadow hover:shadow-lg transition relative">
    <div class="w-full flex justify-between items-center ">
      <h2 class="text-2xl font-semibold text-gray-700 flex items-center gap-2 mb-4"><i class="fas fa-language"></i> <%= __('myProfile.languages') %></h2>
      <button class="text-lg font-semibold text-gray-500 hover:text-orange-500 flex items-center gap-2 mb-4">
        <i class="fas fa-plus-circle"></i> <%= __('myProfile.addLanguage') %>
      </button>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <% user.languages.forEach(lang => { %>
        <div class="flex items-center gap-2 bg-white px-4 py-2 rounded-lg shadow-sm border hover:shadow-md cursor-pointer transition">
          <i class="fas fa-comment-alt text-orange-500"></i>
          <span class="font-medium text-gray-700"><%= lang %></span>
        </div>
      <% }) %>
    </div>
  </div>
  <% } %>

  <% if(user.skills && user.skills.technical && user.skills.technical.length){ %>
  <div class="border rounded-lg p-6 bg-gray-50 shadow hover:shadow-lg transition relative">
    <div class="w-full flex justify-between items-center ">
      <h2 class="text-2xl font-semibold text-gray-700 flex items-center gap-2 mb-4"><i class="fas fa-laptop-code"></i> <%= __('myProfile.technicalSkills') %></h2>
      <button class="text-lg font-semibold text-gray-500 hover:text-orange-500 flex items-center gap-2 mb-4">
        <i class="fas fa-plus-circle"></i> <%= __('myProfile.addSkill') %>
      </button>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 max-h-96 overflow-y-auto py-2 border-y">
      <% user.skills.technical.forEach(skill => { %>
      <div class="flex items-center gap-2 bg-white px-4 py-2 rounded-lg shadow-sm border hover:shadow-md cursor-pointer transition justify-between">
        <div class="flex items-center gap-2">
          <i class="fas fa-check-circle text-orange-500"></i>
          <span class="font-medium text-gray-700"><%= skill %></span>
        </div>
        <button class="text-gray-400 hover:text-red-500 transition"><i class="fas fa-trash-alt"></i></button>
      </div>
      <% }) %>
    </div>
  </div>
  <% } %>

  <% if(user.skills && user.skills.personal && user.skills.personal.length){ %>
  <div class="border rounded-lg p-6 bg-gray-50 shadow hover:shadow-lg transition relative mt-6">
    <div class="w-full flex justify-between items-center ">
      <h2 class="text-2xl font-semibold text-gray-700 flex items-center gap-2 mb-4"><i class="fas fa-users"></i> <%= __('myProfile.personalSkills') %></h2>
      <button class="text-lg font-semibold text-gray-500 hover:text-orange-500 flex items-center gap-2 mb-4">
        <i class="fas fa-plus-circle"></i> <%= __('myProfile.addSkill') %>
      </button>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 max-h-96 overflow-y-auto">
      <% user.skills.personal.forEach(skill => { %>
      <div class="flex items-center gap-2 bg-white px-4 py-2 rounded-lg shadow-sm border hover:shadow-md cursor-pointer transition justify-between">
        <div class="flex items-center gap-2">
          <i class="fa-solid fa-circle-check text-orange-500"></i>
          <span class="font-medium text-gray-700"><%= skill %></span>
        </div>
        <button class="text-gray-400 hover:text-red-500 transition"><i class="fas fa-trash-alt"></i></button>
      </div>
      <% }) %>
    </div>
  </div>
  <% } %>

  <% if(user.experience && user.experience.length){ %>
  <div class="border rounded-lg p-6 bg-gray-50 shadow hover:shadow-lg transition relative">
    <div class="w-full flex justify-between items-center ">
      <h2 class="text-2xl font-semibold text-gray-700 mb-4 flex items-center gap-2"><i class="fas fa-briefcase"></i> <%= __('myProfile.experience') %></h2>
      <button class="text-lg font-semibold text-gray-500 hover:text-orange-500 flex items-center gap-2 mb-4">
        <i class="fas fa-plus-circle"></i> <%= __('myProfile.addExperience') %>
      </button>
    </div>
    <div class="space-y-5 max-h-96 overflow-y-auto">
      <% user.experience.forEach(job => { %>
      <div class="bg-white border border-gray-200 rounded-xl shadow-sm hover:shadow-md p-5 transition cursor-pointer relative">
        <div class="flex justify-between items-center">
          <h3 class="font-semibold text-gray-700 text-lg"><%= job.title %> @ <%= job.company %></h3>
          <div class="flex gap-2">
            <button class="text-gray-500 hover:text-orange-500 transition"><i class="fas fa-edit"></i></button>
            <button class="text-gray-400 hover:text-red-500 transition"><i class="fas fa-trash-alt"></i></button>
          </div>
        </div>
        <p class="text-gray-400 text-sm mt-1"><i class="far fa-calendar-alt mr-1"></i> <%= job.years %></p>
        <p class="text-gray-600 mt-2 text-sm"><%= job.description %></p>
      </div>
      <% }) %>
    </div>
  </div>
  <% } %>

  <% if(user.education && user.education.length){ %>
  <div class="border rounded-lg p-6 bg-gray-50 shadow hover:shadow-lg transition relative">
    <div class="w-full flex justify-between items-center ">
      <h2 class="text-2xl font-semibold text-gray-700 mb-4 flex items-center gap-2"><i class="fas fa-graduation-cap"></i> <%= __('myProfile.education') %></h2>
      <button class="text-lg font-semibold text-gray-500 hover:text-orange-500 flex items-center gap-2 mb-4">
        <i class="fas fa-plus-circle"></i> <%= __('myProfile.addEducation') %>
      </button>
    </div>
    <div class="space-y-4 max-h-96 overflow-y-auto">
      <% user.education.forEach(edu => { %>
      <div class="p-4 bg-white rounded-xl shadow hover:shadow-md transition flex justify-between items-center">
        <div>
          <h3 class="font-bold text-gray-800"><%= edu.degree %> at <%= edu.institution %></h3>
          <p class="text-gray-500 text-sm"><i class="far fa-calendar-alt mr-1"></i> <%= edu.year %></p>
        </div>
        <div class="flex gap-2">
          <button class="text-gray-500 hover:text-orange-500 transition"><i class="fas fa-edit"></i></button>
          <button class="text-gray-400 hover:text-red-500 transition"><i class="fas fa-trash-alt"></i></button>
        </div>
      </div>
      <% }) %>
    </div>
  </div>
  <% } %>

  <% if(user.projects && user.projects.length){ %>
  <div class="border rounded-lg p-6 bg-gray-50 shadow hover:shadow-lg transition relative">
    <div class="w-full flex justify-between items-center ">
        <h2 class="text-2xl font-semibold text-gray-700 mb-4 flex items-center gap-2"><i class="fas fa-project-diagram"></i> <%= __('myProfile.projects') %></h2>
        <button class="text-lg font-semibold text-gray-500 hover:text-orange-500 flex items-center gap-2 mb-4">
          <i class="fas fa-plus-circle"></i> <%= __('myProfile.addProject') %>
        </button>
    </div>
    <div class="space-y-5 max-h-96 overflow-y-auto">
      <% user.projects.forEach(project => { %>
      <div class="bg-white border border-gray-200 rounded-xl shadow-sm hover:shadow-md p-5 transition cursor-pointer relative">
        <h3 class="font-semibold text-gray-700 text-lg"><%= project.title %> - <%= project.role %></h3>
        <p class="text-gray-600 mt-2 text-sm"><%= project.description %></p>
        <div class="absolute top-4 right-4 flex gap-2">
          <button class="text-gray-500 hover:text-orange-500 transition"><i class="fas fa-edit"></i></button>
          <button class="text-gray-400 hover:text-red-500 transition"><i class="fas fa-trash-alt"></i></button>
        </div>
      </div>
      <% }) %>
    </div>
  </div>
  <% } %>

</div>


<script>
const form = document.getElementById('cvForm');
const fileInput = document.getElementById('cv');
const statusDiv = document.getElementById('upload-status');
const uploadBtn = document.getElementById('upload-btn');

form.addEventListener('submit', async (e) => {
  e.preventDefault();

  const file = fileInput.files[0];
  if (!file) {
    statusDiv.textContent = "Please select a file first!";
    return;
  }

  const formData = new FormData();
  formData.append('cv', file);
  formData.append('user_id', '<%= userId %>');

  uploadBtn.disabled = true;
  statusDiv.textContent = "Uploading and parsing CV...";

  try {
    const response = await fetch('/cv/upload', {
      method: 'POST',
      body: formData
    });

    const data = await response.json();

    if (data.redirect) {
      window.location.href = data.redirect; 
    } else {
      statusDiv.textContent = data.message || "Error parsing CV.";
    }
  } catch (err) {
    statusDiv.textContent = "Error uploading file: " + err.message;
  } finally {
    uploadBtn.disabled = false;
    fileInput.value = "";
  }
});

const cvLabelText = document.getElementById('cv-label-text');
const cvLabelIcon = document.getElementById('cv-label-icon');

fileInput.addEventListener('change', () => {
  const file = fileInput.files[0];
  if (file) {
    cvLabelText.textContent = file.name;
    cvLabelIcon.className = 'fas fa-check text-green-600 ml-2';
  } else {
    cvLabelText.textContent = 'Choose your CV (PDF, DOC, DOCX)';
    cvLabelIcon.className = 'fas fa-upload text-orange-600 ml-2';
  }
});

form.addEventListener('submit', async (e) => {
  e.preventDefault();

  const file = fileInput.files[0];
  if (!file) {
    statusDiv.textContent = "Please select a file first!";
    return;
  }

  const formData = new FormData();
  formData.append('cv', file);
  formData.append('user_id', '<%= userId %>');

  uploadBtn.disabled = true;
  const originalBtnHTML = uploadBtn.innerHTML;
  uploadBtn.innerHTML = `<i class="fas fa-spinner fa-spin"></i> <%= __('myProfile.uploading') %>`;
  statusDiv.textContent = `<%= __('myProfile.parsing') %>`;

  try {
    const response = await fetch('/cv/upload', {
      method: 'POST',
      body: formData
    });

    const data = await response.json();

    if (data.redirect) {
      window.location.href = data.redirect; 
    } else {
      statusDiv.textContent = data.message || "Error parsing CV.";
    }
  } catch (err) {
    statusDiv.textContent = "Error uploading file: " + err.message;
  } finally {
    uploadBtn.disabled = false;
    uploadBtn.innerHTML = originalBtnHTML;
    fileInput.value = "";
    cvLabelText.textContent = 'Choose your CV (PDF, DOC, DOCX)';
    cvLabelIcon.className = 'fas fa-upload text-orange-600 ml-2';
  }
});
</script>